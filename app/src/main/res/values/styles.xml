<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.Fullscreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="mWhiteEdt" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:backgroundTint">@android:color/white</item>

    </style>

    <style name="mWhiteTv" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="mDefaultBtn" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/round_btn</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingLeft">70dp</item>
        <item name="android:paddingRight">70dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="mGrayEdt" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorGrayText</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textColorHint">@color/colorGrayText</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:backgroundTint">@color/colorGrayText</item>

    </style>

    <style name="mGrayTv" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorGrayText</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="mBtnDate" parent="@android:style/TextAppearance">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/colorGrayText</item>
        <item name="android:textColorHint">@color/colorGrayText</item>
        <item name="android:textSize">14sp</item>

    </style>

</resources>
